{
  "buildCommand": "vite build && esbuild api/index.ts --platform=node --bundle --format=esm --outfile=api/index.js --external:@neondatabase/serverless --external:ws --external:bufferutil --external:utf-8-validate",
  "outputDirectory": "dist/public",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
